<h1>Update Your Contacts</h1>

<form action="/update/<%= @contact.id %>" method="get">
  <input type="text" name="name" placeholder="Current name" value="<%= @contact.name %>">
  <br>
  <br>
  <input type="text" name="surname" placeholder="Current surname" value="<%= @contact.surname %>">
  <br>
  <br>
  <input type="text" name="email" placeholder="Current email" value="<%= @contact.email %>">
  <br>
  <br>
  <input type="text" name="address" placeholder="Current address" value="<%= @contact.address %>">
  <br>
  <p><%= flash[:alert] %></p>
  <br>
  <input type="submit" value="Submit">
</form>
